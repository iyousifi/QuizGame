@using QuizGameBlazor.DataAccess
@using QuizGameBlazor.Models
@inject ICategoryRepository categoryRepository
@inject IJSRuntime jsRuntime

<div class="modal" tabindex="-1" role="dialog" id="categoryModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@CustomHeader</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@CategoryObject" OnValidSubmit="@HandleValidSubmit">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="hidden" @bind-value="@CategoryObject.Id" />
                        <InputText id="name" class="form-control" @bind-Value="@CategoryObject.Name" />
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <InputText id="description" class="form-control" @bind-Value="@CategoryObject.Description"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>



@code {
    [Parameter]
    public Models.Category CategoryObject { get; set; }

    [Parameter]
    public Action DataChanged { get; set; }

    [Parameter]
    public RenderFragment CustomHeader { get; set; }

    private async Task CloseTaskModal()
    {
        await jsRuntime.InvokeAsync<object>("CloseModal", "categoryModal");
    }


    private async void HandleValidSubmit()
    {
        if (CategoryObject.Id == 0)
        {
            await categoryRepository.AddAsync(CategoryObject);
        }
        else
        {
            await categoryRepository.UpdateAsync(CategoryObject);
        }
        await CloseTaskModal();
        DataChanged?.Invoke();
    }
}